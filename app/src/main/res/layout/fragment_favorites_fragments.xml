<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FavoritesFragments">

    <!-- TODO: Update blank fragment layout -->

   <TextView
        android:id="@+id/txtFavorites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="@string/favorites_dashboard"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imgFFF"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/txtFavorites"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="58dp"
        android:src="@drawable/error" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Favorites Till Now"
        android:layout_below="@id/imgFFF"
        android:layout_centerInParent="true"
        android:textSize="25sp"
        android:textColor="#f44336"
        android:padding="10dp"
        />
</RelativeLayout>