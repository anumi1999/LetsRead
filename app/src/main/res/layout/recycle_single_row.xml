<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llContent"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="horizontal"
    android:background="#ffffff"
    android:weightSum="6">

    <ImageView
        android:id="@+id/imgRVSingleRow"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_weight="1.5"
        android:padding="5dp"
        android:src="@drawable/book"
        android:scaleType="centerCrop"
        />

    <RelativeLayout
        android:layout_weight="3.4"
        android:layout_width="0dp"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/txtRVSingleRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/list_item"
        android:paddingTop="10dp"
        android:paddingLeft="15dp"
        android:textSize="20sp"
        android:textColor="#000000"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/txtAuthorRVSingleRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtRVSingleRow"
        android:text="Name of the Author"
        android:paddingTop="10dp"
        android:paddingLeft="15dp"
        android:textSize="20sp"
        android:textColor="#2e7d32"
        android:textStyle="bold"
        />

        <TextView
            android:id="@+id/txtPriceRVSingleRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtAuthorRVSingleRow"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="44dp"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:text="Rs. 250"
            android:textColor="#d84315"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txtBookRating"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.1"
        android:drawableLeft="@drawable/star"
        android:drawablePadding="4dp"
        android:padding="1dp"
        android:text="4.5"
        android:textColor="#33c9dc"
        android:textSize="15sp"
        android:textStyle="bold">

    </TextView>

</LinearLayout>